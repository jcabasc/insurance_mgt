  <h2>Editar Persona</h2>
  <%= form_for (user), html: {class: "form-horizontal"} do |f| %>
    <% user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :documento, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :documento , class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tipo_documento, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :tipo_documento, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :nombre, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :nombre, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :apellido, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :apellido, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :telefono, class: "col-sm-2 text-left" %>
      <div class="col-sm-4">
        <%= f.text_field :telefono, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4">
        <%= f.submit nil, class: "btn btn-success" %>
        <%= link_to 'Cancel', user, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>